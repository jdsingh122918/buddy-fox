# Anthropic API Configuration
ANTHROPIC_API_KEY=your_api_key_here

# Claude Code Configuration (optional)
# CLAUDE_CODE_PATH=/path/to/claude-code

# Agent Behavior Settings
# Maximum number of web searches allowed per session
MAX_WEB_SEARCHES=10

# Default model to use for the agent
CLAUDE_MODEL=claude-sonnet-4-5-20250929

# Web Search Configuration (optional)
# Comma-separated list of allowed domains (leave empty for no restrictions)
# ALLOWED_DOMAINS=wikipedia.org,github.com

# Comma-separated list of blocked domains
# BLOCKED_DOMAINS=example.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text
LOG_TO_CONSOLE=true
# LOG_FILE=/path/to/logs/buddy-fox.log  # Optional: write logs to file

# Transcription Configuration
# AssemblyAI API key for real-time transcription
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Enable/disable transcription features
ENABLE_TRANSCRIPTION=true

# Transcription chunk size in milliseconds (how often to send audio chunks)
# Smaller values = faster transcription but more API calls
# Recommended: 500-2000ms
TRANSCRIPTION_CHUNK_SIZE_MS=1000

# Language code for transcription (e.g., en, es, fr, de, etc.)
TRANSCRIPTION_LANGUAGE=en

# Maximum audio duration in seconds (default: 1 hour)
MAX_AUDIO_DURATION_SECONDS=3600
